<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.view.RootLayoutController" stylesheets="@./css/DarkTheme.css">
   <top>
      <MenuBar prefHeight="25.0" prefWidth="600.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="New" onAction="#handleNew"/>
                  <MenuItem mnemonicParsing="false" text="Open" onAction="#handleOpen" />
                  <MenuItem mnemonicParsing="false" text="Save" onAction="#handleSave"/>
                  <MenuItem mnemonicParsing="false" text="Save file as.." onAction="#handleSaveAs"/>
                  <MenuItem mnemonicParsing="false" text="About me" onAction="#handleAbout"/>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Statistics">
            <items>
              <MenuItem mnemonicParsing="false" text="Show Statistics" onAction="#handleShowBirthdayStatistics"/>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
